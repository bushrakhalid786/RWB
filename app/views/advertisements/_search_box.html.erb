<div class="Hero__container2">
  <div class="Searchbox__container">
    <%= form_tag("/search?category=#{alias_name}",method: :get) do %>
      <div class="Searchbox__bottom">
        <% if html_view == "0" %>
          <%= select_tag  "search[category_id]",options_for_select(@category.children.pluck("name,id"),selected: (params[:search] and params[:search][:category_id])),prompt: " Select Category",class: "Searchbox__keyword__input2 select_class" %>
          <%= select_tag  "search[make_id]",options_for_select([["Make",""]] + Make.pluck("name","id"),selected: (params[:search] and params[:search][:make_id])),prompt: "Select Make",class: "Searchbox__keyword__input2 select_class" %>
          <%= select_tag  "search[year]",options_for_select(((Time.now.year - 25)..(Time.now.year)).to_a.reverse.collect{|aa| [aa,aa]},selected: (params[:search] and params[:search][:year])),prompt: "Select Year",class: "Searchbox__keyword__input2 small_select_class" %>
          <br><br>
        <% end %>
        <%= text_field_tag "search[title]","",class: "Searchbox__keyword__input",placeholder: "Enter keywords",:value => (params[:search] and params[:search][:title]) %>
        <%= hidden_field_tag "search[parent_category_id]", @parent_category.id if @category.present?%>
        <input type="submit" class="Searchbox__search__button" value="Search">
      </div>
    <% end %>
  </div>
</div>
